{
  "compilerOptions": {
    "target": "ES5",                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "noImplicitAny": true,
    "module": "ESNext", 
    "moduleResolution": "Node", 
    "allowJs": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}